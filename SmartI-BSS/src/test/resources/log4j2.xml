<?xml version="1.0" encoding="UTF-8"?>


<Configuration status = "WARN">
	
	<Properties>
		<property name="basePath">./logs</property>
	</Properties>
	


<Appenders>
	<Console name ="Console" target ="SYSTEM_OUT">
		<PatternLayout pattern ="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} -%msg%n"/>
	</Console>
	
	<RollingFile name="File" filename ="${basePath}/automation.log" filePattern ="${basePath}/automation-%d{yyyy-MM-dd}.log"></RollingFile>
	<PatternLayo pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} -%msg%n"/>
	<SizeBasedTriggeringPolicy size ="5000"/>
	
	
</Appenders>

<Loggers>	
	<Root level ="info"><!-- Here you can use multiple log levels All < Trace < Debug < Info < Warn < Error < Off-->
		<!-- <Appender ref ="Console"-->
			<ApperderRef ref="File"/>
	</Root>
</Loggers>

</Configuration>